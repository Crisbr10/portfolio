---
// Sección de proyectos
const projects = [
  {
    title: 'Aplicación Web Moderna',
    description: 'Desarrollo de una aplicación web full-stack con autenticación de usuarios, dashboard interactivo y visualización de datos en tiempo real.',
    technologies: ['React', 'Node.js', 'MongoDB', 'Express'],
    imageUrl: '/project1.jpg', // Añadir imagen para cada proyecto
    link: '#',
    github: 'https://github.com/Crisbr10'
  },
  {
    title: 'E-commerce Platform',
    description: 'Plataforma de comercio electrónico con carrito de compras, pasarela de pagos, gestión de inventario y panel de administración.',
    technologies: ['Next.js', 'Prisma', 'PostgreSQL', 'Stripe'],
    imageUrl: '/project2.jpg',
    link: '#',
    github: 'https://github.com/Crisbr10'
  },
  {
    title: 'Portfolio Personal',
    description: 'Diseño y desarrollo de un sitio web personal utilizando Astro y TailwindCSS con animaciones y efectos visuales modernos.',
    technologies: ['Astro', 'TailwindCSS', 'JavaScript'],
    imageUrl: '/project3.jpg',
    link: '#',
    github: 'https://github.com/Crisbr10/portfolio'
  },
  {
    title: 'Aplicación Móvil',
    description: 'Desarrollo de una aplicación móvil multiplataforma para gestión de tareas con sincronización en la nube.',
    technologies: ['React Native', 'Firebase', 'Redux'],
    imageUrl: '/project4.jpg',
    link: '#',
    github: 'https://github.com'
  }
];
---
<section id="projects" class="relative min-h-screen flex flex-col justify-center items-center py-20 sm:py-24 md:py-32 bg-darkBlue-900 text-darkBlue-50 overflow-hidden">
  <!-- Background effect -->
  <div class="absolute inset-0 bg-darkBlue-900">
    <div class="absolute top-1/3 right-1/4 w-1/3 h-1/3 bg-darkBlue-800 rounded-full opacity-20 blur-[100px]"></div>
    <div class="absolute bottom-1/4 left-1/3 w-1/3 h-1/3 bg-darkBlue-700 rounded-full opacity-20 blur-[80px]"></div>
  </div>
  
  <div class="max-w-6xl mx-auto px-4 sm:px-6 relative z-10 w-full">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6 sm:mb-10 text-darkBlue-50 drop-shadow text-center">Mis Proyectos</h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8 w-full">
      {projects.map(project => (
        <div class="group bg-darkBlue-800/60 backdrop-blur-sm rounded-xl overflow-hidden border border-darkBlue-700/50 transition-all duration-300 hover:shadow-xl hover:shadow-darkBlue-700/20 hover:scale-[1.02]">
          <div class="w-full h-40 sm:h-48 bg-darkBlue-700/50 overflow-hidden">
            <!-- Placeholder image with gradient -->
            <div class="w-full h-full bg-gradient-to-br from-darkBlue-700 to-darkBlue-500 flex items-center justify-center">
              <svg class="w-12 h-12 sm:w-16 sm:h-16 text-darkBlue-900/20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          </div>
          
          <div class="p-4 sm:p-6">
            <h3 class="text-lg sm:text-xl font-semibold mb-2 text-darkBlue-50">{project.title}</h3>
            <p class="mb-4 text-darkBlue-200 text-sm sm:text-base">{project.description}</p>
            
            <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-4">
              {project.technologies.map(tech => (
                <span class="bg-darkBlue-700/60 px-2 py-1 rounded-full text-darkBlue-50 text-xs">{tech}</span>
              ))}
            </div>
            
            <div class="flex justify-between items-center pt-2 border-t border-darkBlue-700/50">
              <a 
                href={project.link} 
                class="text-darkBlue-50 hover:text-darkBlue-200 transition-colors font-medium text-sm sm:text-base flex items-center gap-1" 
                target="_blank" 
                rel="noopener noreferrer"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                Demo
              </a>
              <a 
                href={project.github} 
                class="text-darkBlue-50 hover:text-darkBlue-200 transition-colors font-medium text-sm sm:text-base flex items-center gap-1" 
                target="_blank" 
                rel="noopener noreferrer"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.477 2 2 6.484 2 12.021c0 4.428 2.865 8.184 6.839 9.504.5.092.682-.217.682-.482 0-.237-.009-.868-.014-1.703-2.782.605-3.369-1.342-3.369-1.342-.454-1.154-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.004.07 1.532 1.032 1.532 1.032.892 1.53 2.341 1.088 2.91.832.091-.647.35-1.088.636-1.339-2.221-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.987 1.029-2.686-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.025A9.564 9.564 0 0 1 12 6.844c.85.004 1.705.115 2.504.337 1.909-1.295 2.748-1.025 2.748-1.025.546 1.378.202 2.397.1 2.65.64.699 1.028 1.593 1.028 2.686 0 3.847-2.337 4.695-4.566 4.944.36.31.68.921.68 1.857 0 1.34-.012 2.421-.012 2.751 0 .267.18.577.688.48C19.138 20.2 22 16.447 22 12.021 22 6.484 17.523 2 12 2z"/>
                </svg>
                GitHub
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Botón para ver más proyectos -->
    <div class="flex justify-center mt-10 sm:mt-12">
      <a 
        href="https://github.com/Crisbr10" 
        target="_blank"
        rel="noopener noreferrer"
        class="group relative inline-flex items-center gap-2 bg-darkBlue-700 hover:bg-darkBlue-600 text-darkBlue-50 font-semibold py-2.5 sm:py-3 px-4 sm:px-6 rounded-lg shadow-sm transition-all duration-300 border-2 border-darkBlue-700 hover:shadow-lg hover:shadow-darkBlue-600/20 focus:outline-none focus:ring-2 focus:ring-darkBlue-500/30 text-sm sm:text-base"
      >
        <svg class="w-4 h-4 sm:w-5 sm:h-5 text-darkBlue-300 group-hover:text-darkBlue-200 transition-colors" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.477 2 2 6.484 2 12.021c0 4.428 2.865 8.184 6.839 9.504.5.092.682-.217.682-.482 0-.237-.009-.868-.014-1.703-2.782.605-3.369-1.342-3.369-1.342-.454-1.154-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.004.07 1.532 1.032 1.532 1.032.892 1.53 2.341 1.088 2.91.832.091-.647.35-1.088.636-1.339-2.221-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.987 1.029-2.686-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.025A9.564 9.564 0 0 1 12 6.844c.85.004 1.705.115 2.504.337 1.909-1.295 2.748-1.025 2.748-1.025.546 1.378.202 2.397.1 2.65.64.699 1.028 1.593 1.028 2.686 0 3.847-2.337 4.695-4.566 4.944.36.31.68.921.68 1.857 0 1.34-.012 2.421-.012 2.751 0 .267.18.577.688.48C19.138 20.2 22 16.447 22 12.021 22 6.484 17.523 2 12 2z"></path>
        </svg>
        Ver más proyectos en GitHub
      </a>
    </div>
  </div>
</section>
